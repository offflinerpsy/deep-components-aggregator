{
  "name": "deep-agg-alpha",
  "version": "3.1.0",
  "type": "module",
  "description": "Deep Components Aggregator with Orders Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "lint": "eslint tests/ --max-warnings 10",
    "test": "vitest run",
    "test:watch": "vitest",
    "smtp:verify": "node ./scripts/verify-smtp.mjs",
    "smtp:test": "node ./scripts/send-test-email.mjs",
    "mail:relay:test": "node ./scripts/send-mail-relay-test.mjs",
    "notify:test": "node ./scripts/notify-dispatch-test.mjs",
    "rates:refresh": "node ./scripts/refresh-rates.mjs",
    "data:ingest:chipdip": "node ./scripts/ingest-chipdip-urls.mjs --glob 'loads/urls/*.txt' --concurrency 4 --batch 100",
    "data:index:build": "node ./scripts/build-index.mjs",
    "smoke": "node ./scripts/e2e-smoke.mjs",
    "smoke:prod": "BASE_URL=https://prosnab.tech node ./scripts/e2e-smoke.mjs",
    "test:e2e": "playwright test",
    "diag:live": "node ./scripts/diag-live.mjs",
    "diag:report": "node ./scripts/diag-report.mjs",
    "providers:check": "node ./scripts/check-providers.mjs",
    "snapshots": "node v0-components-aggregator-page/scripts/snapshots.mjs",
    "sse": "bash v0-components-aggregator-page/scripts/capture-sse.sh",
    "diag:capture": "node ./scripts/capture-diagnostics.mjs",
    "deploy": "bash ./deploy-to-server.sh"
  },
  "dependencies": {
    "@adminjs/express": "^6.1.1",
    "@adminjs/sequelize": "^4.1.1",
    "@orama/orama": "^1.2.11",
    "adminjs": "^7.8.17",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "argon2": "^0.44.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "connect-sqlite3": "^0.9.16",
    "cyrillic-to-translit-js": "^3.2.1",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "express-session": "^1.18.2",
    "fast-xml-parser": "^4.3.2",
    "glob": "^10.3.10",
    "http-build-query": "^0.7.0",
    "http-proxy-agent": "^7.0.2",
    "http-proxy-to-socks": "^1.1.4",
    "multer": "^2.0.2",
    "nanoid": "^5.0.3",
    "natural": "^8.1.0",
    "nodemailer": "^6.9.15",
    "p-queue": "^9.0.0",
    "passport": "^0.7.0",
    "passport-google-oidc": "^0.1.0",
    "passport-local": "^1.0.0",
    "passport-vkontakte": "^0.3.3",
    "passport-yandex": "^0.0.5",
    "pino": "^10.1.0",
    "prom-client": "^15.0.0",
    "sequelize": "^6.37.7",
    "socks-proxy-agent": "^8.0.5",
    "sort-keys-recursive": "^2.1.10",
    "sqlite3": "^5.1.7",
    "stemmer": "^2.0.1",
    "tme-api-client": "^1.0.0",
    "transliteration": "^2.3.5",
    "tslib": "^2.8.1",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.44.1",
    "@types/node": "^22.8.3",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "p-limit": "^6.1.0",
    "playwright": "^1.44.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "vitest": "^1.6.0",
    "zod": "^3.24.1"
  },
  "config": {
    "PROVIDER_TIMEOUT": "9500",
    "CONNECT_TIMEOUT": "2500"
  }
}
