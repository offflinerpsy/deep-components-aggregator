{
  "name": "deep-agg-alpha",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "qa": "node src/qa/runner.js",
    "qa:headless": "node src/qa/runner.js --headless",
    "qa:report": "node -e \"console.log(require('fs').readFileSync('reports/qa/summary.json','utf8'))\"",
    "test:e2e": "PLAYWRIGHT_JSON_OUTPUT_NAME=report.json npx playwright test --reporter=line",
    "test:e2e:trace": "npx playwright test --reporter=list --trace=on",
    "verify:prod": "powershell -ExecutionPolicy Bypass -File scripts/verify-prod-win.ps1"
  },
  "dependencies": {
    "ajv-formats": "3.0.1",
    "cheerio": "^1.1.2",
    "express": "^5.1.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "ajv": "^8.17.1",
    "playwright": "1.55.1"
  }
}
