<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title id="pageTitle">Загрузка...</title>
  <meta name="description" id="pageDescription" content="">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/v0-theme.css?v=1">
  <style>
    .page-content {
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
      background: var(--card-bg);
      border-radius: 12px;
      box-shadow: var(--shadow-md);
    }
    .page-content h1 {
      margin-top: 0;
      margin-bottom: 1.5rem;
      color: var(--text-primary);
    }
    .page-content p {
      line-height: 1.6;
      color: var(--text-secondary);
      margin-bottom: 1rem;
    }
    .error-message {
      padding: 1rem;
      background: #fee;
      border-left: 4px solid #f66;
      border-radius: 4px;
      color: #c33;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">
          <a href="/" style="text-decoration: none; display: flex; align-items: center; gap: 12px;">
            <div class="logo-chip"></div>
            <div class="logo-text">ДИПОНИКА</div>
          </a>
        </div>

        <div class="nav-wrapper">
          <nav class="main-nav">
            <a href="/page/about" class="nav-link">О нас</a>
            <a href="/page/delivery" class="nav-link">Доставка</a>
            <a href="/page/contacts" class="nav-link">Контакты</a>
          </nav>

          <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
            <svg class="sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <svg class="moon-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="main-content">
    <div class="container">
      <div class="page-content" id="pageContent">
        <p>Загрузка...</p>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-left">
          <p class="copyright">© 2025 Components Aggregator</p>
          <span class="separator">•</span>
          <p class="description">Агрегатор поиска электронных компонентов</p>
        </div>

        <div class="footer-right">
          <div class="footer-links">
            <a href="/page/about" class="footer-link">О нас</a>
            <span class="separator">•</span>
            <a href="/page/delivery" class="footer-link">Доставка</a>
            <span class="separator">•</span>
            <a href="/page/contacts" class="footer-link">Контакты</a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Theme toggle
    const themeToggle = document.getElementById('themeToggle');
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.body.setAttribute('data-theme', savedTheme);
    
    themeToggle?.addEventListener('click', () => {
      const current = document.body.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      document.body.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
    });

    // Load page content
    (async () => {
      const pathParts = window.location.pathname.split('/');
      const slug = pathParts[pathParts.length - 1] || pathParts[pathParts.length - 2];

      if (!slug || slug === 'page') {
        document.getElementById('pageContent').innerHTML = '<div class="error-message">Страница не указана</div>';
        return;
      }

      try {
        const res = await fetch(`/api/pages/${slug}`);
        
        if (!res.ok) {
          if (res.status === 404) {
            document.getElementById('pageContent').innerHTML = '<div class="error-message">Страница не найдена</div>';
            document.getElementById('pageTitle').textContent = '404 - Страница не найдена';
          } else {
            throw new Error(`HTTP ${res.status}`);
          }
          return;
        }

        const page = await res.json();
        
        document.getElementById('pageTitle').textContent = `${page.title} - ДИПОНИКА`;
        document.getElementById('pageDescription').setAttribute('content', page.meta_description || page.title);
        document.getElementById('pageContent').innerHTML = page.content;
      } catch (err) {
        console.error('Failed to load page:', err);
        document.getElementById('pageContent').innerHTML = 
          '<div class="error-message">Ошибка загрузки страницы. Попробуйте позже.</div>';
      }
    })();
  </script>
</body>
</html>
