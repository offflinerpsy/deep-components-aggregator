{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://deep-agg.com/schemas/auth.login.json",
  "title": "User Login Schema",
  "description": "JSON Schema for POST /auth/login request validation",
  "type": "object",
  "required": ["email", "password"],
  "additionalProperties": false,
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 5,
      "maxLength": 128,
      "description": "User email address (RFC 5322 format)"
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "User password"
    }
  }
}
