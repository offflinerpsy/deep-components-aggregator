{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PricingSettings",
  "type": "object",
  "properties": {
    "markup_percent": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "Fractional markup (e.g., 0.30 for +30%)"
    },
    "markup_fixed_rub": {
      "type": "number",
      "minimum": 0,
      "maximum": 100000,
      "description": "Fixed amount in RUB added to final price"
    }
  },
  "required": ["markup_percent", "markup_fixed_rub"],
  "additionalProperties": false
}
