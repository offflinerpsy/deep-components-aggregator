  async function loadCategories() {
    try {
      let url = '/api/catalog/categories';
      let breadcrumbUrl = null;

      if (categorySlug) {
        url = `/api/catalog/categories/${encodeURIComponent(categorySlug)}`;
        breadcrumbUrl = `/api/catalog/breadcrumb/${encodeURIComponent(categorySlug)}`;
      }

      const [dataRes, breadcrumbRes] = await Promise.all([
        fetch(url),
        breadcrumbUrl ? fetch(breadcrumbUrl) : Promise.resolve(null)
      ]);

      if (!dataRes.ok) {
        throw new Error(dataRes.status === 404 ? '–ö–∞—Ç–µ–≥–æ—Ä–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞' : `HTTP ${dataRes.status}`);
      }

      const data = await dataRes.json();
      
      if (!data.ok) {
        throw new Error(data.error || '–û—à–∏–±–∫–∞ API');
      }

      // Breadcrumb rendering
      if (breadcrumbRes && breadcrumbRes.ok) {
        const breadcrumbData = await breadcrumbRes.json();
