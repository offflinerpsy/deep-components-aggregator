        // Hover preview
        let hoverTimer;
        let previewEl;
        
        el.addEventListener('mouseenter', (e) => {
          const idx = parseInt(el.dataset.index);
          const item = currentResults[idx];
          if (!item) return;
          
          hoverTimer = setTimeout(async () => {
            try {
              const res = await fetch(`/api/product?mpn=${encodeURIComponent(item.mpn)}`);
              const data = await res.json();
              
              if (data.ok && data.product) {
                const product = data.product;
                previewEl = showPreviewPopover(el, product);
              }
            } catch (err) {
              console.error('Preview fetch error:', err);
            }
          }, 500); // 500ms delay before showing preview
        });
        
        el.addEventListener('mouseleave', () => {
          clearTimeout(hoverTimer);
          // Delay closing to allow moving mouse to preview
          setTimeout(() => {
            if (previewEl && !previewEl.matches(':hover')) {
              previewEl.remove();
              previewEl = null;
            }
          }, 200);
        });
        
        // Keep preview open when hovering over it
        document.addEventListener('mouseover', (e) => {
          if (previewEl && previewEl.contains(e.target)) {
            clearTimeout(hoverTimer);
          }
        });
      });
