      `;
    }
  }

  function renderBreadcrumb(breadcrumb) {
    const items = breadcrumb.map((item, idx) => {
      const isLast = idx === breadcrumb.length - 1;
      if (isLast) {
        return `<span class="text-foreground">${escapeHtml(item.name)}</span>`;
      }
      return `
        <svg class="w-4 h-4 inline text-foreground/30" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <a href="/catalog-test?category=${encodeURIComponent(item.slug)}" class="hover:text-foreground transition-colors">
          ${escapeHtml(item.name)}
        </a>
      `;
    }).join('');
    breadcrumbItemsEl.innerHTML = items;
  }

  function renderCategories(categories) {
    if (!categories || categories.length === 0) {
      contentEl.innerHTML = `
        <div class="text-center py-12 text-foreground/50">
          <p>–ù–µ—Ç –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–π</p>
