    </svg>`
  };

  function getCategoryIcon(name) {
    const normalized = (name || '').toLowerCase();
    if (/ic|chip|processor|controller|microcontroller/.test(normalized)) return icons.chip;
    if (/transistor|mosfet|bjt|fet/.test(normalized)) return icons.transistor;
    if (/resistor|ohm/.test(normalized)) return icons.resistor;
    if (/connector|jack|plug|socket/.test(normalized)) return icons.connector;
    if (/memory|ram|rom|flash/.test(normalized)) return icons.memory;
    return icons.default;
  }

  async function loadCategories() {
    try {
      let url = '/api/catalog/categories';
      let breadcrumbUrl = null;

      if (categorySlug) {
        url = `/api/catalog/categories/${encodeURIComponent(categorySlug)}`;
        breadcrumbUrl = `/api/catalog/breadcrumb/${encodeURIComponent(categorySlug)}`;
      }

      const [dataRes, breadcrumbRes] = await Promise.all([
        fetch(url),
        breadcrumbUrl ? fetch(breadcrumbUrl) : Promise.resolve(null)
      ]);

      if (!dataRes.ok) {
        throw new Error(dataRes.status === 404 ? '–ö–∞—Ç–µ–≥–æ—Ä–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞' : `HTTP ${dataRes.status}`);
      }

      const data = await dataRes.json();
      
      if (!data.ok) {
        throw new Error(data.error || '–û—à–∏–±–∫–∞ API');
      }

      // Breadcrumb rendering
      if (breadcrumbRes && breadcrumbRes.ok) {
        const breadcrumbData = await breadcrumbRes.json();
        if (breadcrumbData.ok && breadcrumbData.breadcrumb) {
          renderBreadcrumb(breadcrumbData.breadcrumb);
          breadcrumbEl.style.display = 'block';
        }
      }

      // Check if this is a leaf category (show search form)
      if (data.category && data.category.is_leaf) {
        renderSearchForm(data.category);
        return;
      }

      // Render categories
      const categories = categorySlug ? data.subcategories : data.categories;
      renderCategories(categories);

    } catch (err) {
      contentEl.innerHTML = `
        <div class="glass p-6 border border-border rounded-lg max-w-md mx-auto text-center">
          <svg class="w-12 h-12 mx-auto mb-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-lg font-medium mb-2">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏</h3>
          <p class="text-foreground/70">${err.message}</p>
          <a href="/catalog-test" class="inline-block mt-4 px-4 py-2 bg-primary text-white rounded hover:bg-primary/90 transition-colors">
            –í–µ—Ä–Ω—É—Ç—å—Å—è –∫ –∫–∞—Ç–∞–ª–æ–≥—É
          </a>
