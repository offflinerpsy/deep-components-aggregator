               <span class="text-green-600">${bestOffer.stock || 0} —à—Ç</span>
             </div>
           </div>`
        : '';
      
      popover.innerHTML = `
        <div class="flex items-start gap-3">
          <div class="w-16 h-16 bg-foreground/5 rounded flex-shrink-0 flex items-center justify-center">
            ${product.images && product.images[0]
              ? `<img src="${escapeHtml(product.images[0])}" alt="${escapeHtml(product.mpn)}" class="max-w-full max-h-full object-contain" />`
              : '<span class="text-2xl text-foreground/30">üì¶</span>'
            }
          </div>
          <div class="flex-1 min-w-0">
            <div class="font-bold text-sm truncate">${escapeHtml(product.mpn)}</div>
            <div class="text-xs text-foreground/60 truncate">${escapeHtml(product.manufacturer || '')}</div>
          </div>
        </div>
        ${specsHtml}
        ${priceHtml}
        <div class="mt-3 pt-3 border-t border-border/50">
          <a 
            href="/product/${encodeURIComponent(product.mpn)}" 
            class="block w-full px-4 py-2 bg-primary text-white text-center rounded hover:bg-primary/90 transition-colors text-sm font-medium"
          >
            –ü–æ–¥—Ä–æ–±–Ω–µ–µ ‚Üí
          </a>
        </div>
      `;
      
      document.body.appendChild(popover);
      
      // Close on mouseleave
      popover.addEventListener('mouseleave', () => {
        setTimeout(() => {
          if (!popover.matches(':hover')) {
            popover.remove();
          }
        }, 200);
      });
      
      return popover;
    }
    
    function formatResistance(r) {
      if (!r || !r.value) return '';
      const val = r.value;
      if (val >= 1e6) return `${(val / 1e6).toFixed(1)}MŒ©`;
      if (val >= 1e3) return `${(val / 1e3).toFixed(1)}kŒ©`;
      return `${val}Œ©`;
    }
    
    function formatCapacitance(c) {
      if (!c || !c.value) return '';
      const val = c.value;
      if (val >= 1e-6) return `${(val * 1e6).toFixed(1)}ŒºF`;
      if (val >= 1e-9) return `${(val * 1e9).toFixed(1)}nF`;
      return `${(val * 1e12).toFixed(1)}pF`;
    }
    
