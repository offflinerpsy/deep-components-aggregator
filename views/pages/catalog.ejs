    // Reset state
    searchResults = [];
    displayedCount = 20;
    searchCompleted = false;
    document.getElementById('results-tbody').innerHTML = '';
    document.getElementById('results-cards').innerHTML = '';
    document.getElementById('results-empty').classList.add('hidden');
    document.getElementById('search-loading').style.display = 'block';
    document.getElementById('results-table-wrapper').style.display = 'none';
    document.getElementById('results-count').textContent = '0';
    
    // Start SSE search with category filter
    if (searchEventSource) {
      searchEventSource.close();
    }
    
    const searchUrl = `/api/live/search?q=${encodeURIComponent(query)}&limit=999`;
    searchEventSource = new EventSource(searchUrl);
    
    searchEventSource.addEventListener('result', (event) => {
      try {
        const data = JSON.parse(event.data);
        // SSE sends all results in one 'result' event with data.rows array
        searchResults = data.rows || [];
        updateSearchResults();
      } catch (err) {
        console.error('Parse error:', err);
      }
    });
    
    searchEventSource.addEventListener('done', () => {
      searchCompleted = true;
      searchEventSource.close();
      searchEventSource = null;
      document.getElementById('search-loading').style.display = 'none';
      
      if (searchResults.length === 0) {
        document.getElementById('results-empty').classList.remove('hidden');
      }
    });
    
    searchEventSource.onerror = (err) => {
      console.error('SSE error:', err);
      searchEventSource?.close();
      searchEventSource = null;
      document.getElementById('search-loading').style.display = 'none';
      document.getElementById('search-status-text').textContent = '–û—à–∏–±–∫–∞ –ø–æ–∏—Å–∫–∞';
    };
  }
  
  function updateSearchResults() {
    const tbody = document.getElementById('results-tbody');
    const cardsContainer = document.getElementById('results-cards');
    const loadMoreBtn = document.getElementById('load-more-btn');
    
    if (searchResults.length > 0) {
      document.getElementById('results-table-wrapper').style.display = 'block';
      document.getElementById('results-count').textContent = searchResults.length;
      
      // Render only displayed items (pagination)
      const itemsToShow = searchResults.slice(0, displayedCount);
      
      // Render table rows (desktop)
      tbody.innerHTML = itemsToShow.map(item => renderTableRow(item)).join('');
      
      // Render cards (mobile)
      cardsContainer.innerHTML = itemsToShow.map(item => renderCard(item)).join('');
      
      // Show/hide "Load More" button
      if (loadMoreBtn) {
        if (displayedCount < searchResults.length) {
          loadMoreBtn.style.display = 'block';
          loadMoreBtn.querySelector('.load-more-count').textContent = Math.min(20, searchResults.length - displayedCount);
        } else {
          loadMoreBtn.style.display = 'none';
        }
