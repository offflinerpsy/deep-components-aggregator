    }
  }

  function renderBreadcrumb(breadcrumb) {
    const items = breadcrumb.map((item, idx) => {
      const isLast = idx === breadcrumb.length - 1;
      if (isLast) {
        return `<span class="text-foreground">${escapeHtml(item.name)}</span>`;
      }
      return `
        <svg class="w-4 h-4 inline text-foreground/30" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <a href="/catalog-test?category=${encodeURIComponent(item.slug)}" class="hover:text-foreground transition-colors">
          ${escapeHtml(item.name)}
        </a>
      `;
    }).join('');
    breadcrumbItemsEl.innerHTML = items;
  }

  function renderCategories(categories) {
    if (!categories || categories.length === 0) {
      contentEl.innerHTML = `
        <div class="text-center py-12 text-foreground/50">
          <p>–ù–µ—Ç –ø–æ–¥–∫–∞—Ç–µ–≥–æ—Ä–∏–π</p>
        </div>
      `;
      return;
    }

    const html = `
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        ${categories.map(cat => `
          <a href="/catalog-test?category=${encodeURIComponent(cat.slug)}" 
             class="component-card glass border border-border rounded-lg p-6 hover:border-primary/50 transition-all group cursor-pointer">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 text-primary/80 group-hover:text-primary transition-colors">
                ${getCategoryIcon(cat.name)}
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-medium mb-1 group-hover:text-primary transition-colors">
                  ${escapeHtml(cat.name)}
                </h3>
                ${cat.path ? `<p class="text-sm text-foreground/50 truncate">${escapeHtml(cat.path)}</p>` : ''}
              </div>
            </div>
          </a>
        `).join('')}
      </div>
    `;
    contentEl.innerHTML = html;
  }

  function renderSearchForm(category) {
    const html = `
      <div class="max-w-2xl mx-auto fade-in">
        <div class="glass border border-border rounded-lg p-8">
          <div class="text-center mb-6">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 mb-4">
              ${getCategoryIcon(category.name)}
            </div>
            <h2 class="text-2xl font-medium mb-2">
              ${escapeHtml(category.name)}
            </h2>
            <p class="text-foreground/70">
              –ö–æ–Ω–µ—á–Ω–∞—è –∫–∞—Ç–µ–≥–æ—Ä–∏—è ‚Äî –≤–≤–µ–¥–∏—Ç–µ –∑–∞–ø—Ä–æ—Å –¥–ª—è –ø–æ–∏—Å–∫–∞ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤
            </p>
          </div>

          <form id="search-form" class="space-y-4">
            <div class="relative">
              <input 
                type="text" 
                id="search-input"
                placeholder="–í–≤–µ–¥–∏—Ç–µ MPN –∏–ª–∏ —Ö–∞—Ä–∞–∫—Ç–µ—Ä–∏—Å—Ç–∏–∫–∏..."
                class="w-full px-4 py-3 rounded-lg border border-border bg-background focus:outline-none focus:ring-2 focus:ring-primary/50 transition-all"
                autocomplete="off"
                autofocus
              />
              <div id="autocomplete-results" class="hidden absolute top-full left-0 right-0 mt-1 max-h-80 overflow-y-auto bg-background border border-border rounded-lg shadow-lg z-50"></div>
            </div>
            <div class="flex gap-3">
              <button 
                type="submit"
                class="flex-1 px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors font-medium"
              >
                –ò—Å–∫–∞—Ç—å –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—ã
              </button>
              <a 
                href="/catalog-test?category=${encodeURIComponent(category.slug.split('-').slice(0, -1).join('-') || '')}"
                class="px-6 py-3 border border-border rounded-lg hover:bg-foreground/5 transition-colors"
              >
                –ù–∞–∑–∞–¥
              </a>
            </div>
          </form>
        </div>

        <div class="mt-6 text-center text-sm text-foreground/50">
          <p>üí° –°–æ–≤–µ—Ç: –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é "${escapeHtml(category.name)}" –≤ —Ñ–∏–ª—å—Ç—Ä–∞—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤</p>
        </div>
      </div>
    `;
    
    contentEl.innerHTML = html;

    // Attach search handler
    const form = document.getElementById('search-form');
    const input = document.getElementById('search-input');
    const autocompleteEl = document.getElementById('autocomplete-results');
    
    // Autocomplete logic
    let debounceTimer;
    let currentResults = [];
    let currentMeta = null;
    
    input?.addEventListener('input', (e) => {
      clearTimeout(debounceTimer);
      const query = (e.target.value || '').trim();
      
      if (query.length < 2) {
        autocompleteEl.classList.add('hidden');
        autocompleteEl.innerHTML = '';
        currentMeta = null;
        return;
      }
      
      debounceTimer = setTimeout(async () => {
        try {
          const res = await fetch(`/api/autocomplete?q=${encodeURIComponent(query)}`);
          const data = await res.json();
          
          if (data.suggestions && data.suggestions.length > 0) {
            currentResults = data.suggestions;
            currentMeta = data.meta || null;
            renderAutocomplete(data.suggestions, currentMeta);
          } else {
            autocompleteEl.classList.add('hidden');
          }
        } catch (err) {
          console.error('Autocomplete error:', err);
        }
      }, 300);
    });
    
    function renderAutocomplete(suggestions, meta) {
      let headerHtml = '';
      if (meta && meta.specsDetected) {
        headerHtml = `<div class="px-4 py-2 bg-primary/10 border-b border-border/50 text-xs text-foreground/70">üîç –ü–æ–∏—Å–∫ –ø–æ —Ö–∞—Ä–∞–∫—Ç–µ—Ä–∏—Å—Ç–∏–∫–∞–º</div>`;
      }
      
      const itemsHtml = suggestions.slice(0, 8).map((item, idx) => {
        let specsHtml = '';
        if (meta && meta.specsDetected && meta.specs) {
          const badges = [];
          const s = meta.specs;
          if (s.package) badges.push(`<span class="inline-block px-2 py-0.5 text-xs rounded bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-200">${escapeHtml(s.package)}</span>`);
          if (s.resistance) badges.push(`<span class="inline-block px-2 py-0.5 text-xs rounded bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-200">${formatResistance(s.resistance)}</span>`);
          if (s.capacitance) badges.push(`<span class="inline-block px-2 py-0.5 text-xs rounded bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-200">${formatCapacitance(s.capacitance)}</span>`);
          if (s.voltage) badges.push(`<span class="inline-block px-2 py-0.5 text-xs rounded bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-200">${s.voltage.value}${s.voltage.unit || 'V'}</span>`);
          if (s.tolerance) badges.push(`<span class="inline-block px-2 py-0.5 text-xs rounded bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-200">¬±${s.tolerance.value}%</span>`);
          if (badges.length > 0) specsHtml = `<div class="mt-1 flex flex-wrap gap-1">${badges.join('')}</div>`;
        }
        
        return `
          <div class="autocomplete-item px-4 py-3 hover:bg-foreground/5 cursor-pointer border-b border-border/50 last:border-0" data-index="${idx}">
            <div class="font-medium text-sm">${escapeHtml(item.mpn)}</div>
            <div class="text-xs text-foreground/60 truncate">${escapeHtml(item.title || item.manufacturer || '')}</div>
            ${specsHtml}
          </div>
        `;
      }).join('');
      
      autocompleteEl.innerHTML = headerHtml + itemsHtml;
      autocompleteEl.classList.remove('hidden');
      
      // Click handlers
      autocompleteEl.querySelectorAll('.autocomplete-item').forEach(el => {
        el.addEventListener('click', () => {
          const idx = parseInt(el.dataset.index);
          const item = currentResults[idx];
          if (item) {
            window.location.href = `/product/${encodeURIComponent(item.mpn)}`;
          }
        });
        
        // Hover preview
        let hoverTimer;
        let previewEl;
        
        el.addEventListener('mouseenter', (e) => {
          const idx = parseInt(el.dataset.index);
          const item = currentResults[idx];
          if (!item) return;
          
          hoverTimer = setTimeout(async () => {
            try {
              const res = await fetch(`/api/product?mpn=${encodeURIComponent(item.mpn)}`);
              const data = await res.json();
              
              if (data.ok && data.product) {
                const product = data.product;
                previewEl = showPreviewPopover(el, product);
              }
            } catch (err) {
              console.error('Preview fetch error:', err);
            }
          }, 500); // 500ms delay before showing preview
        });
        
        el.addEventListener('mouseleave', () => {
          clearTimeout(hoverTimer);
          // Delay closing to allow moving mouse to preview
          setTimeout(() => {
            if (previewEl && !previewEl.matches(':hover')) {
              previewEl.remove();
              previewEl = null;
            }
          }, 200);
        });
        
        // Keep preview open when hovering over it
        document.addEventListener('mouseover', (e) => {
          if (previewEl && previewEl.contains(e.target)) {
            clearTimeout(hoverTimer);
          }
        });
      });
    }
    
    function showPreviewPopover(anchorEl, product) {
      // Remove existing preview
      const existing = document.getElementById('product-preview-popover');
      if (existing) existing.remove();
      
      const popover = document.createElement('div');
      popover.id = 'product-preview-popover';
      popover.className = 'fixed bg-background border border-border rounded-lg shadow-xl z-[100] w-80 p-4';
      
      // Position adjacent to anchor element
      const rect = anchorEl.getBoundingClientRect();
      const isRightSpace = window.innerWidth - rect.right > 340;
      if (isRightSpace) {
        popover.style.left = `${rect.right + 10}px`;
        popover.style.top = `${rect.top}px`;
      } else {
        popover.style.right = `${window.innerWidth - rect.left + 10}px`;
        popover.style.top = `${rect.top}px`;
      }
      
      // Get top 5 specs
      const specs = product.technical_specs || {};
      const specKeys = Object.keys(specs).slice(0, 5);
      const specsHtml = specKeys.length > 0
        ? `<div class="mt-3 space-y-1 text-xs">
             ${specKeys.map(key => `
               <div class="flex justify-between">
                 <span class="text-foreground/60">${escapeHtml(key)}:</span>
                 <span class="font-medium">${escapeHtml(String(specs[key]))}</span>
               </div>
             `).join('')}
           </div>`
        : '<div class="mt-3 text-xs text-foreground/50">–•–∞—Ä–∞–∫—Ç–µ—Ä–∏—Å—Ç–∏–∫–∏ –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç</div>';
      
      // Get price/stock from offers
      const offers = product.offers || [];
      const bestOffer = offers.length > 0 ? offers[0] : null;
      const priceHtml = bestOffer
        ? `<div class="mt-3 pt-3 border-t border-border/50 text-sm">
             <div class="flex justify-between items-center">
               <span class="text-foreground/60">–¶–µ–Ω–∞:</span>
               <span class="font-bold text-primary">${bestOffer.price} ${bestOffer.currency || 'USD'}</span>
             </div>
             <div class="flex justify-between items-center mt-1">
               <span class="text-foreground/60">–ù–∞–ª–∏—á–∏–µ:</span>
               <span class="text-green-600">${bestOffer.stock || 0} —à—Ç</span>
             </div>
           </div>`
        : '';
      
      popover.innerHTML = `
        <div class="flex items-start gap-3">
          <div class="w-16 h-16 bg-foreground/5 rounded flex-shrink-0 flex items-center justify-center">
            ${product.images && product.images[0]
              ? `<img src="${escapeHtml(product.images[0])}" alt="${escapeHtml(product.mpn)}" class="max-w-full max-h-full object-contain" />`
              : '<span class="text-2xl text-foreground/30">üì¶</span>'
            }
          </div>
          <div class="flex-1 min-w-0">
            <div class="font-bold text-sm truncate">${escapeHtml(product.mpn)}</div>
            <div class="text-xs text-foreground/60 truncate">${escapeHtml(product.manufacturer || '')}</div>
          </div>
        </div>
        ${specsHtml}
        ${priceHtml}
        <div class="mt-3 pt-3 border-t border-border/50">
          <a 
            href="/product/${encodeURIComponent(product.mpn)}" 
            class="block w-full px-4 py-2 bg-primary text-white text-center rounded hover:bg-primary/90 transition-colors text-sm font-medium"
          >
            –ü–æ–¥—Ä–æ–±–Ω–µ–µ ‚Üí
          </a>
        </div>
      `;
      
      document.body.appendChild(popover);
      
      // Close on mouseleave
      popover.addEventListener('mouseleave', () => {
        setTimeout(() => {
          if (!popover.matches(':hover')) {
            popover.remove();
          }
        }, 200);
      });
      
      return popover;
    }
    
    function formatResistance(r) {
      if (!r || !r.value) return '';
      const val = r.value;
      if (val >= 1e6) return `${(val / 1e6).toFixed(1)}MŒ©`;
      if (val >= 1e3) return `${(val / 1e3).toFixed(1)}kŒ©`;
      return `${val}Œ©`;
    }
    
    function formatCapacitance(c) {
      if (!c || !c.value) return '';
      const val = c.value;
      if (val >= 1e-6) return `${(val * 1e6).toFixed(1)}ŒºF`;
      if (val >= 1e-9) return `${(val * 1e9).toFixed(1)}nF`;
      return `${(val * 1e12).toFixed(1)}pF`;
    }
    
    // Close autocomplete on outside click
    document.addEventListener('click', (e) => {
      if (!input?.contains(e.target) && !autocompleteEl?.contains(e.target)) {
        autocompleteEl?.classList.add('hidden');
      }
    });
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const query = (input?.value || '').trim();
      if (query) {
        window.location.href = `/results?q=${encodeURIComponent(query)}&category=${encodeURIComponent(category.name)}`;
